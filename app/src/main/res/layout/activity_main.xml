<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPrefrence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"/>
    <Button
        android:id="@+id/btnStoreInformation"
        android:text="Store Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnShowInformation"
        android:text="Show Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <fragment
        android:id="@+id/f1"
        android:name="com.example.preferencefragment.PrefsActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>




